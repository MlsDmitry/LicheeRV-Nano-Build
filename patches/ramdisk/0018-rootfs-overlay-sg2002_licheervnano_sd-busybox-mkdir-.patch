From: Lu Hui <luhui@sipeed.com>
Date: Tue, 20 Feb 2024 14:58:03 +0800
Subject: [PATCH 18/28] rootfs/overlay/sg2002_licheervnano_sd: busybox mkdir
 not support -v, so remove it

---
 rootfs/overlay/sg2002_licheervnano_sd/etc/init.d/S99skel | 2 +-
 rootfs/overlay/sg2002_licheervnano_sd/jump               | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/rootfs/overlay/sg2002_licheervnano_sd/etc/init.d/S99skel b/rootfs/overlay/sg2002_licheervnano_sd/etc/init.d/S99skel
index 41bbb00..1a6d1ca 100755
--- a/rootfs/overlay/sg2002_licheervnano_sd/etc/init.d/S99skel
+++ b/rootfs/overlay/sg2002_licheervnano_sd/etc/init.d/S99skel
@@ -12,6 +12,6 @@ then
 fi
 if [ ! -e /mnt/data/user/sipeed ]
 then
-	mkdir -pv /mnt/data/user/sipeed
+	mkdir -p /mnt/data/user/sipeed
 	chown -R sipeed:sipeed /mnt/data/user/sipeed
 fi
diff --git a/rootfs/overlay/sg2002_licheervnano_sd/jump b/rootfs/overlay/sg2002_licheervnano_sd/jump
index e1ebd89..3e5961a 100755
--- a/rootfs/overlay/sg2002_licheervnano_sd/jump
+++ b/rootfs/overlay/sg2002_licheervnano_sd/jump
@@ -12,8 +12,8 @@ if [ -e /mnt/data/sbin/init ]
 then
 	echo "use vendor's system setup driver"
 	mdev -s
-	mkdir -pv /dev/pts
-	mkdir -pv /dev/shm
+	mkdir -p /dev/pts
+	mkdir -p /dev/shm
 	mount -a
 	/etc/init.d/rcS
 	/etc/init.d/rcP
